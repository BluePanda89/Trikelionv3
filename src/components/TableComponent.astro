---
// Get the category and list of courses passed to this component
const { category, courses } = Astro.props;
---

<style>
    /* Container styling */
    .course-section {
        margin-bottom: 3rem;
        font-family:
            system-ui,
            -apple-system,
            sans-serif;
    }

    .category-header {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a202c; /* Dark Grey */
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }

    /* Responsive Table Container */
    .table-container {
        overflow-x: auto; /* Allows scrolling on mobile */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        border-radius: 0.5rem;
        border: 1px solid #e2e8f0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        text-align: left;
    }

    th {
        background-color: #f7fafc;
        color: #4a5568;
        font-weight: 600;
        padding: 0.75rem 1rem;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        border-bottom: 1px solid #e2e8f0;
    }

    td {
        padding: 1rem;
        border-bottom: 1px solid #e2e8f0;
        vertical-align: top;
    }

    tr:last-child td {
        border-bottom: none;
    }

    tr:hover {
        background-color: #f8fafc;
    }

    /* Typography Utilities */
    .font-bold {
        font-weight: 700;
    }
    .text-sm {
        font-size: 0.875rem;
    }
    .text-primary {
        color: #2b6cb0;
    } /* Triskelion Blue-ish */
    .text-muted {
        color: #4a5568;
        line-height: 1.5;
    }

    /* Badges */
    .badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 9999px;
    }

    .badge-cert {
        background-color: #c6f6d5; /* Light Green */
        color: #22543d;
    }

    .badge-workshop {
        background-color: #bee3f8; /* Light Blue */
        color: #2a4365;
    }

    /* Details Column */
    .detail-row {
        white-space: nowrap;
        margin-bottom: 0.25rem;
    }

    .icon {
        display: inline-block;
        width: 1.2em;
        text-align: center;
        margin-right: 0.25rem;
    }
</style>

<div class="course-section">
    <h2 class="category-header">{category}</h2>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th class="col-name">Course Name</th>
                    <th class="col-status">Status</th>
                    <th class="col-type">Type</th>
                    <th class="col-details">Details</th>
                    <th class="col-desc">Description</th>
                </tr>
            </thead>
            <tbody>
                {
                    courses.map((course) => (
                        <tr>
                            <td class="font-bold text-primary">{course.name}</td>
                            <td>
                                {course.certified ? (
                                    <span class="badge badge-cert">Certified</span>
                                ) : (
                                    <span class="badge badge-workshop">Workshop</span>
                                )}
                            </td>
                            <td class="text-sm">{course.type}</td>
                            <td class="text-sm">
                                <div class="detail-row">
                                    <span class="icon">‚è≥</span> {course.duration}
                                </div>
                                <div class="detail-row">
                                    <span class="icon">üìç</span> {course.method}
                                </div>
                            </td>
                            <td class="text-sm text-muted">{course.description}</td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</div>
