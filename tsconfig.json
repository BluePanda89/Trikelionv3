{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist", "git","github","vscode","node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@styles/*": ["./src/styles/*"],
            "@images/*": ["./src/images/*", "./src/assets/images/*"],
            "@data/*": ["./src/data/*"],
            "@utils/*": ["./src/utils/*"],
            "@assets/*": ["./src/assets/*"],
            "@src/*"    : ["./src/*"]   
        }
    }
}
